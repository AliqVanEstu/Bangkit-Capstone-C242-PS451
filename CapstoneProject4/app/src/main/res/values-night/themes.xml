<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for night mode. -->
    <style name="Theme.CapstoneProject_Dark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item> <!-- Teks putih di atas warna utama untuk kontras yang baik -->

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item> <!-- Teks putih di atas warna sekunder untuk kontras yang baik -->

        <!-- Background color -->
<!--        <item name="colorBackground">@color/black</item> &lt;!&ndash; Latar belakang gelap untuk tema malam &ndash;&gt;-->
        <item name="colorOnBackground">@color/white</item> <!-- Teks putih di atas latar belakang gelap -->

        <!-- Surface color (untuk elemen seperti CardView). -->
        <item name="colorSurface">@color/card_background_dark</item> <!-- Latar belakang lebih gelap untuk surface -->
        <item name="colorOnSurface">@color/white</item> <!-- Teks putih di atas surface yang gelap -->

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Toolbar background color -->
<!--        <item name="colorToolbar">@color/dark_toolbar</item> &lt;!&ndash; Toolbar lebih gelap &ndash;&gt;-->

        <!-- Customize your theme here -->
    </style>
</resources>